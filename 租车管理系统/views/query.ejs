<script type="text/javascript">

    //添加
    $("#btn").click(function () {
        $.post("/student",{
            sid : parseInt($("input[name=sid]").val()),
            name : $("input[name=name]").val(),
            phone : $("input[name=phone]").val(),
            adres : $("input[name=adres]").val(),
            shenf : $("input[name=shenf]").val(),
            jiaz : $("input[name=jiaz]").val(),
        },function(data){
            if(data.result == 1){
                alert("提交成功！");
                $("input[type=text]").val("");
                window.location.href="/query";
            }else if(data.result == -1){
                alert("提交失败，行号被占用！");
            }else if(data.result == -2){
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })

    //删除
    $("#tbody").delegate("input[name=a]","click",function () {
        $("#removebtn").attr("data-sid",$(this).attr("data-sid"))
        var checked = $(this)[0].checked;
    })
    $("#removebtn").click(function () {
        var sid = $(this).attr("data-sid");
        var $this = $(this);

        $.ajax({
            url : "/student/" + sid,
            type : "delete",
            success : function(data){
                // console.log("bb")
                console.log(data)
                if(data.result == 1){
                    alert("删除成功");
                    $this.parents("tr").remove();
                    window.location.href="/query"
                }else{
                    // console.log("bb")
                    alert("服务器错误！");
                    return;
                    window.location.href="/query"
                }
            }
        });


    })

    //详情
    $("#tbody").delegate(".huo","click",function () {

        $("#moddess").attr("data-sid",$(this).attr("data-sid"))
        var checked = $(this)[0].checked;
    })

    $("#moddess").click(function () {
        var sid = $(this).attr("data-sid");
        $.ajax({
            url : "/student/" + sid,
            type : "Patch",
            success : function(data){
                $("#boxul").empty();
                $li = $("<li></li>");
                $("<div>行号: "+data.info.sid+"</div>").appendTo($li);
                $("<div>客户名称:"+data.info.name+"</div>").appendTo($li);
                $("<div>电话:"+data.info.phone+"</div>").appendTo($li);
                $("<div>住址"+data.info.adres+"</div>").appendTo($li);
                $("<div>身份证:"+data.info.shenf+"</div>").appendTo($li);
                $("<div>驾照号码:"+data.info.jiaz+"</div>").appendTo($li);
                $li.appendTo($("#boxul"));
            }
        });
    })
    $("#chatn").click(function () {

        window.location.href="/query"
    })
    //修改
    $("#tbody").delegate(".huo","click",function () {
        var sid = $(this).attr("data-sid");
        var checked = $(this)[0].checked;
        if (checked){
            $.ajax({
                url : "/student/" + sid,
                type : "get",
                success : function(data){
                    // console.log(data.result)
                    $("input[name=name]").val(data.result.name)
                    parseInt($("input[name=sid]").val(data.result.sid)),
                        $("input[name=phone]").val(data.result.phone),
                        $("input[name=adres]").val(data.result.adres),
                        $("input[name=shenf]").val(data.result.shenf),
                        $("input[name=jiaz]").val(data.result.jiaz)
                }
            })
        }
        $("#update").click(function () {
            if (checked){
                $.post("/student/" + sid,{
                    sid : parseInt($("#sid").val()),
                    name : $("#name").val(),
                    phone : $("#phone").val(),
                    adres : $("#adres").val(),
                    shenf : $("#shenf").val(),
                    jiaz : $("#jiaz").val(),
                },function(data){
                    if(data.result == 1){
                        // console.log(data)
                        console.log(data)
                        // gotopage()
                        alert("修改成功！");
                        $("input[type=text]").val("");
                        window.location = "/query";
                    }else{
                        alert("服务器错误！请联系管理员，怎么联系我也不知道！");
                        $("input[type=text]").val("");
                    }
                })
                window.location.href="/query"
            }else{
                return;
            }
        })

    })

    //请求一次，创建分页条
    $.get("/student?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);
    });


    //Ajax请求，请求JSON数据
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();

        //获得新的数据
        $.get("/student?page=" + pagenumber,function(data){
            $.each(data.results,function(i, n){
                //创建一个tr标签
                $tr = $("<tr></tr>");
                $("<td><input type='radio' name='a' class='huo' data-sid='"+n.sid+"'></td>").appendTo($tr);
                $("<td></td>").html(n.sid).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $("<td></td>").html(n.phone).appendTo($tr);
                $("<td></td>").html(n.adres).appendTo($tr);
                $("<td></td>").html(n.shenf).appendTo($tr);
                $("<td></td>").html(n.jiaz).appendTo($tr);
                $tr.appendTo($("#tbody"));
            });
        });
    }

    $("#tuic").click(function () {
        alert("退出成功")
        window.location.href="/"
    })
</script>
