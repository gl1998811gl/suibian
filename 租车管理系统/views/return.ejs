<div class="container" style="margin-top: 80px">
    <table class="table  table-striped"  style="margin-bottom: 40px;">
        <thead>
        <tr>
            <th></th>
            <th>编号</th>
            <th>姓名</th>
            <th>租凭名称</th>
            <th>租凭时长</th>
            <th>每天价格</th>
            <th>已付押金</th>
            <th>应付金额</th>
        </tr>
        </thead>
        <tbody id="tbody"></tbody>
    </table>

    <div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <p>
                    已付押金：
                    <input type="text" class="form-control" id="yifuyajin">
                </p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <p>
                    应付金额：
                    <input type="text" class="form-control" id="yingfujine">
                </p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <p>
                    找零金额：
                    <input type="text" class="form-control" id="zhaolingjine">
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8" ></div>
            <div class="col-lg-2 col-md-2 col-sm-2" >
                <p><button type="button" class="btn btn-success" style="width: 100px;" id="guiHuanBtn">确定</button></p>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2" >
                <p><button type="button" class="btn btn-danger" style="width: 100px;">关闭</button></p>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/PageNav.js"></script>
<script type="text/javascript">
    $.get('/getzupinxinxi',function (data) {
        $.each(data.result,function(i, n){
            $tr = $("<tr></tr>");
            $("<td><input type='radio' id='check' data-name='"+n.qichemingchen+"' data-yifu='" + n.kerenzhifu +"' data-sid='" + n.sid +"' data-yingfu='"+(n.zupingshichang * n.zujin+1000)+"' name='cicici'/></td>").appendTo($tr);
            $("<td></td>").html(i+1).appendTo($tr);
            $("<td></td>").html(n.xuan).appendTo($tr);
            $("<td></td>").html(n.qichemingchen).appendTo($tr);
            $("<td></td>").html(n.zupingshichang).appendTo($tr);
            $("<td></td>").html(n.zujin).appendTo($tr);
            $("<td></td>").html(n.kerenzhifu).appendTo($tr);
            $("<td></td>").html(n.zupingshichang * n.zujin).appendTo($tr);
            $tr.appendTo($("#tbody"));
        });
    })
    //表格默认被选中，显示底部框内容
    $('#tbody').delegate("input[name=cicici]","click",function () {
        var yifu = $(this).data('yifu');
        var yingfu = $(this).data('yingfu');
        $("#guiHuanBtn").attr("data-sid",$(this).attr("data-sid"))
        $('#yifuyajin').val(yifu);
        $('#yingfujine').val(yingfu);
        $('#zhaolingjine').val(yifu - yingfu);
    })

    //点击确定时，归还并删除
    $('#guiHuanBtn').click(function () {
        var sid = $(this).attr("data-sid");
        $.get('/delguihuan?sid='+sid,function (data) {
            console.log(data)
            if(data.result == 1){
                alert('归还成功');
                window.location = '/return';
            }
        })
    })

    $("#tui").click(function () {
        $.get("/tui" ,function (data) {
            console.log(data.resul);
            if (data.resul == 1){
                alert("退出成功");
                window.location.href = "/login"
            } else{
                alert("退出失败")
            }
        })
    })
</script>
</body>
